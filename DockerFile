# Etapa 1: Construcci贸n
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build-env
WORKDIR /app

# Copiar archivos de proyecto y restaurar dependencias
COPY *.csproj ./
RUN dotnet restore

# Copiar el resto del c贸digo y compilar
COPY . ./
RUN dotnet publish -c Release -o out

# Etapa 2: Imagen de producci贸n
FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app

# Copiar el resultado de la compilaci贸n desde la etapa anterior
COPY --from=build-env /app/out ./

# Nombre del archivo DLL generado
ENV APP_NET_CORE=Prueba_Geolocalizacion.dll

# Puerto expuesto por la app
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "Prueba_Geolocalizacion.dll"]
